{
    "editor.renderWhitespace": "trailing",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontFamily": "MesloLGS NF",

    "workbench.colorCustomizations": {
        "terminal.background": "#010c18",
        "terminal.foreground": "#ecdef4",
        "terminalCursor.background": "#000000",
        "terminalCursor.foreground": "#38ff9d",
        "terminal.ansiBlack": "#0b3b61",
        "terminal.ansiBlue": "#1376f9",
        "terminal.ansiBrightBlack": "#63686d",
        "terminal.ansiBrightBlue": "#388eff",
        "terminal.ansiBrightCyan": "#ff6ad7",
        "terminal.ansiBrightGreen": "#74ffd8",
        "terminal.ansiBrightMagenta": "#ae81ff",
        "terminal.ansiBrightRed": "#ff54b0",
        "terminal.ansiBrightWhite": "#60fbbf",
        "terminal.ansiBrightYellow": "#fcf5ae",
        "terminal.ansiCyan": "#ff5ed4",
        "terminal.ansiGreen": "#52ffd0",
        "terminal.ansiMagenta": "#c792ea",
        "terminal.ansiRed": "#ff3a3a",
        "terminal.ansiWhite": "#16fda2",
        "terminal.ansiYellow": "#fff383",
        "terminal.selectionBackground": "#38ff9c"
    },

    "[python]": {
        "editor.formatOnType": true
    }
}
